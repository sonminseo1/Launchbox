<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TipFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                
                <ImageView
                    android:id="@+id/category1"
                    android:src="@drawable/main_icon_all"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category2"
                    android:src="@drawable/main_icon_kari"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category3"
                    android:src="@drawable/main_icon_nasa"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category4"
                    android:src="@drawable/main_icon_spacex"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="모두보기"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:text="한국항공우주연구원"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="미국항공우주국"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="스페이스 X"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/category5"
                    android:src="@drawable/main_icon_ula"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category6"
                    android:src="@drawable/main_icon_blueorigin"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category7"
                    android:src="@drawable/main_icon_rocketlab"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category8"
                    android:src="@drawable/main_icon_ariane"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ULA(미국)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="블루 오리진(미국)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="로켓 랩(뉴질랜드)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="아리안(유럽)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/category9"
                    android:src="@drawable/main_icon_galactic"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category10"
                    android:src="@drawable/main_icon_roscosmos"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category11"
                    android:src="@drawable/main_icon_esa"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:id="@+id/category12"
                    android:src="@drawable/main_icon_cnsa"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="버진 캘럭틱"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="로스코스모스"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="유럽우주국"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="국가항천국(중국)"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/category13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/main_icon_isro" />

                <ImageView
                    android:id="@+id/category14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/main_icon_jaxa" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="인도우주연구기구"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="일본우주연구기구"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:background="@color/mainColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="5"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/homeTap"
                android:layout_weight="1"
                android:src="@drawable/bottom_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/scheduleTap"
                android:layout_weight="1"
                android:src="@drawable/bottom_sche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/talkTap"
                android:layout_weight="1"
                android:src="@drawable/bottom_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/bookmarkTap"
                android:layout_weight="1"
                android:src="@drawable/bottom_bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/tipTap"
                android:layout_weight="1"
                android:src="@drawable/bottom_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

</layout>